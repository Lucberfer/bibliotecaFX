<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>

<!-- Root layout using BorderPane -->
<BorderPane prefHeight="750" prefWidth="1100"
            xmlns:fx="http://javafx.com/fxml/1"
            xmlns="http://javafx.com/javafx/17.0.12"
            fx:controller="org.example.bibliotecafx.view.controller.MainViewController">

    <!-- Linking an external CSS stylesheet -->
    <stylesheets>
        <URL value="@../CSS/style.css"/>
    </stylesheets>

    <!-- Top section: Exit button aligned to the right -->
    <top>
        <HBox alignment="TOP_RIGHT" spacing="10">
            <padding>
                <Insets bottom="10" left="10" right="10" top="10"/>
            </padding>
            <Button fx:id="btnSalir" onAction="#handleSalir" prefHeight="25.0" prefWidth="80.0"
                    style="-fx-background-color: red; -fx-text-fill: white;" text="Salir"/>
        </HBox>
    </top>

    <!-- Left section: Navigation buttons for different views -->
    <left>
        <VBox spacing="10">
            <padding>
                <Insets bottom="10" left="10" right="10" top="10"/>
            </padding>
            <Button onAction="#handleLibros" prefHeight="25.0" prefWidth="76.0" text="Libros"/> <!-- Load Books View -->
            <Button onAction="#handleAutores" prefHeight="25.0" prefWidth="76.0"
                    text="Autores"/> <!-- Load Authors View -->
            <Button onAction="#handleSocios" prefHeight="25.0" prefWidth="76.0"
                    text="Socios"/> <!-- Load Members View -->
            <Button onAction="#handlePrestamos" prefHeight="25.0" prefWidth="76.0"
                    text="PrÃ©stamos"/> <!-- Load Loans View -->
        </VBox>
    </left>

    <!-- Center section: Dynamic content area -->
    <center>
        <StackPane fx:id="contentArea">
            <padding>
                <Insets bottom="10" left="10" right="10" top="10"/>
            </padding>
        </StackPane>
    </center>

</BorderPane>
